#include <iostream>
using namespace std;

int gcf(int num1, int num2);

int main()
{
    int num1, num2;

    while (true)
    {
        cout << "Enter two positive whole numbers or -1 to exit: " << endl;
        cin >> num1;    
        if (num1 == -1)
        {
            break;
        }
        cin >> num2;

        cout << "The greatest common factor of " << num1 << " and " << num2 << " is " << gcf(num1, num2) << endl;
    }

    return 0;
}

int gcf(int num1, int num2)
{
    if (num2 == 0)
    {
        return num1;
    }

    return gcf(num2, num1 % num2);
}
